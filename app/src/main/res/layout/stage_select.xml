<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/challenge1_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="challenge 1"
        app:layout_constraintBottom_toTopOf="@+id/challenge2_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/challenge2_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="challenge 2"
        app:layout_constraintBottom_toTopOf="@+id/challenge3_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge1_button" />

    <Button
        android:id="@+id/challenge3_button"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="challenge 3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge2_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
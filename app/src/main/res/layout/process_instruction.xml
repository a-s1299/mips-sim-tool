<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/diagram"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/temp_process_background" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="86dp"
        android:layout_height="88dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_button_image" />

    <Button
        android:id="@+id/pc_button"
        android:layout_width="122dp"
        android:layout_height="36dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="185dp"
        android:text="PC"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintStart_toStartOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Switch
        android:id="@+id/regDstSwitch"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="104dp"
        android:layoutDirection="rtl"
        android:showText="true"
        android:textOff="0"
        android:textOn="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/instrmem_button" />

    <Button
        android:id="@+id/mem_button"
        android:layout_width="87dp"
        android:layout_height="51dp"
        android:layout_marginTop="458dp"
        android:layout_marginEnd="224dp"
        android:text="Memory"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Switch
        android:id="@+id/ALUSrcSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="336dp"
        android:layout_marginEnd="269dp"
        android:layoutDirection="rtl"
        android:showText="true"
        android:textOff="0"
        android:textOn="1"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Button
        android:id="@+id/regfile_button"
        android:layout_width="125dp"
        android:layout_height="48dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="260dp"
        android:text="Register File"
        app:layout_constraintStart_toStartOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Button
        android:id="@+id/controlunit_button"
        android:layout_width="74dp"
        android:layout_height="70dp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="65dp"
        android:clickable="false"
        android:text="Control Unit"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <ToggleButton
        android:id="@+id/branchToggle"
        android:layout_width="39dp"
        android:layout_height="41dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="142dp"
        android:text="ToggleButton"
        android:textOff="0"
        android:textOn="1"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <ToggleButton
        android:id="@+id/memWriteToggle"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginTop="464dp"
        android:layout_marginEnd="185dp"
        android:text="ToggleButton"
        android:textOff="0"
        android:textOn="1"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <ToggleButton
        android:id="@+id/memReadToggle"
        android:layout_width="33dp"
        android:layout_height="41dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="464dp"
        android:text="ToggleButton"
        android:textOff="0"
        android:textOn="1"
        app:layout_constraintStart_toStartOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <ToggleButton
        android:id="@+id/regWrite"
        android:layout_width="35dp"
        android:layout_height="39dp"
        android:layout_marginTop="263dp"
        android:layout_marginEnd="166dp"
        android:text="ToggleButton"
        android:textOff="0"
        android:textOn="1"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Switch
        android:id="@+id/PCSrcSwitch"
        android:layout_width="48dp"
        android:layout_height="33dp"
        android:layout_marginTop="458dp"
        android:layout_marginEnd="54dp"
        android:checked="false"
        android:clickable="false"
        android:layoutDirection="rtl"
        android:showText="true"
        android:textOff="0"
        android:textOn="1"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Switch
        android:id="@+id/memToRegSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="521dp"
        android:layout_marginEnd="272dp"
        android:layoutDirection="rtl"
        android:showText="true"
        android:textOff="0"
        android:textOn="1"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Button
        android:id="@+id/instrmem_button"
        android:layout_width="235dp"
        android:layout_height="58dp"
        android:layout_marginStart="234dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="120dp"
        android:text="Instruction Memory"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/diagram"
        app:layout_constraintStart_toStartOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="572dp"
        android:layout_marginEnd="93dp"
        android:text="next"
        app:layout_constraintEnd_toEndOf="@+id/diagram"
        app:layout_constraintStart_toEndOf="@+id/check_button"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

    <Button
        android:id="@+id/check_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="82dp"
        android:layout_marginTop="572dp"
        android:text="check"
        app:layout_constraintStart_toStartOf="@+id/diagram"
        app:layout_constraintTop_toTopOf="@+id/diagram" />

</androidx.constraintlayout.widget.ConstraintLayout>